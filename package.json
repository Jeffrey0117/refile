{
  "name": "refile",
  "version": "1.0.0",
  "description": "ReFile â€” Universal virtual file viewer",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "vite build",
    "package": "npm run build && electron-builder",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.5.0",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^33.0.0",
    "electron-builder": "^26.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.refile.viewer",
    "productName": "ReFile",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "fileAssociations": [
        { "ext": "refile", "name": "ReFile Virtual File", "role": "Viewer" },
        { "ext": "repic", "name": "Virtual Image", "role": "Viewer" },
        { "ext": "revid", "name": "Virtual Video", "role": "Viewer" },
        { "ext": "remusic", "name": "Virtual Audio", "role": "Viewer" }
      ]
    }
  }
}
